// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_signature_help_after_edits": true,
  "remove_trailing_whitespace_on_save": true,
  "auto_update": false,
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-3.5-sonnet"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "model_parameters": []
  },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "restore_on_startup": "last_workspace",
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "git_panel": {
    "sort_by_path": false
  },
  "use_system_window_tabs": false,
  "bottom_dock_layout": "contained",
  "preview_tabs": {
    "enable_preview_from_file_finder": false,
    "enabled": true
  },
  "tabs": {
    "show_close_button": "hover",
    "show_diagnostics": "all",
    "file_icons": true,
    "git_status": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "title_bar": {
    "show_menus": false,
    "show_sign_in": true,
    "show_user_picture": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": true,
    "show_branch_icon": true
  },
  "debugger": {
    "button": true
  },
  "terminal": {
    "dock": "bottom",
    "button": true,
    "env": {
      "ZED": "1"
    }
  },
  "status_bar": {
    "cursor_position_button": true,
    "active_language_button": true
  },
  "project_panel": {
    "hide_hidden": false,
    "hide_root": true,
    "sticky_scroll": true,
    "scrollbar": {
      "show": "never"
    },
    "auto_reveal_entries": true,
    "git_status": true,
    "folder_icons": true,
    "entry_spacing": "standard",
    "button": true
  },
  "search": {
    "button": true,
    "regex": false
  },
  "use_smartcase_search": true,
  "diagnostics": {
    "button": true,
    "inline": {
      "enabled": false
    }
  },
  "lsp_document_colors": "inlay",
  "inlay_hints": {
    "show_value_hints": true,
    "show_parameter_hints": true,
    "show_background": false,
    "show_type_hints": true,
    "enabled": false
  },
  // "show_whitespaces": "trailing",
  "show_edit_predictions": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "fixed",
    "active_line_width": 2,
    "line_width": 1,
    "enabled": true
  },
  "hard_tabs": false,
  "tab_size": 2,
  "toolbar": {
    "agent_review": true,
    "quick_actions": true,
    "code_actions": true,
    "breadcrumbs": true
  },
  "minimap": {
    "show": "never"
  },
  "gutter": {
    "min_line_number_digits": 2
  },
  "relative_line_numbers": "enabled",
  "auto_signature_help": false,
  "vertical_scroll_margin": 8.0,
  "excerpt_context_lines": 2,
  "expand_excerpt_lines": 6,
  "show_wrap_guides": true,
  "rounded_selection": false,
  "current_line_highlight": "all",
  "cursor_shape": "bar",
  "ui_font_weight": 400.0,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_weight": 400.0,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "base_keymap": "JetBrains",
  "vim_mode": true,
  "ui_font_size": 18.0,
  "buffer_font_size": 17.0,
  "buffer_font_features": { "calt": false },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Crisp Highest Contrast"
  },
  "lsp": {
    "tinymist": {
      "settings": {
        "exportPdf": "onSave",
        "outputPath": "$root/assignments/$name",
        "feature_paths": true
      },
      "initialization_options": {
        "preview": {
          "background": {
            "enabled": true
          }
        }
      }
    },
    "clangd": {
      "binary": {
        "path_lookup": true,
        "path": "clangd",
        "arguments": [
          // "--header-insertion=never",
          "--function-arg-placeholders=0"
        ]
      }
    }
  },

  "languages": {
    "C": {
      "language_servers": ["clangd"],
      "enable_language_server": true,
      "format_on_save": "off",
      "formatter": "language_server",
      "use_on_type_format": false,
      "prettier": {
        "allowed": false
      }
    },
    "Python": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "ruff check --select=I --fix --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"
          ]
        }
      }
    },
    "Typst": {
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 120
    }
  }
}
